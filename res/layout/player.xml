<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent" >

    <FrameLayout
        android:id="@+id/framecontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hidecontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent" >

        <LinearLayout
            android:id="@+id/topPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">"

                <TextView
                    android:id="@+id/videoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="#CCCCCC"
                    android:textSize="15sp" />

        </LinearLayout>


        <TableLayout
            android:id="@+id/controlPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:stretchColumns="1" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:baselineAligned="true" >

                <TextView
                    android:id="@+id/currenttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.0"
                    android:text="00:00"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:max="1000"
                    android:maxHeight="6dp"
                    android:minHeight="6dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@drawable/seek_thumb"
                    android:thumbOffset="10dip" />

                <TextView
                    android:id="@+id/totaltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.0"
                    android:paddingLeft="12dip"
                    android:paddingRight="12dip"
                    android:text="00:00"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" 
                android:background="#333333"/>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/fs_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="20dip"
                    android:src="@drawable/fs_shadow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <ImageView
                        android:id="@+id/img_vp_backward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/vp_backward" />

                    <ImageView
                        android:id="@+id/img_vp_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dip"
                        android:layout_marginRight="30dip"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
                        android:src="@drawable/vp_pause" />

                    <ImageView
                        android:id="@+id/img_vp_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/vp_forward" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/vp_info_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="20dip"
                    android:src="@drawable/vp_info_show" />
            </TableRow>
        </TableLayout>
    </FrameLayout>

</FrameLayout>